# This kv file uses the following encoding: utf-8

#:import hex kivy.utils.get_color_from_hex
#:import Factory kivy.factory.Factory

MainWindow:


# Custom widgets
<Button@Button>:
    size_hint: 1, None
    height: "40dp"
    pos_hint: {"center_x": .5}

# +------------------------------------------------------------+
# | Main Window                                                |
# +------------------------------------------------------------+
<MainWindow>:
    orientation:  "vertical"
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    # +------------------------------------------------------------+
    # | Header                                                     |
    # +------------------------------------------------------------+
    Label:
        text: "WiShare"
        font_size: "24dp"
        bold: True
        size_hint: 1, None
        height: "46dp"
        canvas.before:
            Color:
                rgb: hex("#0593e6")
            Rectangle:
                size: self.size
                pos: self.pos

    Label:
        text: "Easily share your files from this device, and get it all in your browser on another device."
        text_size: self.width, None
        font_size: "16dp"
        color: 0, 0, 0
        padding: "20dp", "20dp"
        size_hint : 1, None
        height: self.texture_size[1]

        canvas.before:
            Color:
                rgb: hex("#80d0ff")
            Rectangle:
                size: self.size
                pos: self.pos

    # +------------------------------------------------------------+
    # | Main                                                       |
    # +------------------------------------------------------------+
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "30dp"

        BoxLayout:
            orientation: "horizontal"
            spacing: "10dp"

            TextInput:
                text: root.DEFAULT_PATH
                multiline: False
                size_hint: 1, None
                height: "40dp"

            Button:
                id: choose_dir_btn
                text: "Choose directory"
                background_color: hex("#0593e6")
                size_hint: .6, None
                on_release: Factory.DirectoryChooser().open()

        Button:
            id: start_btn
            text: "START SHARING"
            background_color: hex("#00ff00")
            disabled: False
            on_release: root.start_server()

        Label:
            id: status_label
            text: root.server_status + "Type the link below in your browser\n" + root.addr
            text_size: self.width, self.height
            valign: "top"
            font_size:"24dp"
            color: 0, 0, 0
            padding: "10dp", "20dp"
            size_hint: 1, None
            minimum_height: self.texture_size[1]
            height: "200dp"

            canvas.before:
                Color:
                    rgb: hex("#80d0ff")
                Rectangle:
                    size: self.size
                    pos: self.pos

        Button:
            id: stop_btn
            text: "STOP SHARING"
            background_color: hex("#ff0000")
            disabled: True
            on_release: root.stop_server()

    # +------------------------------------------------------------+
    # | Footer                                                     |
    # +------------------------------------------------------------+
    Label:
        text: "•CreativeMind"
        font_name: "fonts/CreativeMind.ttf"
        font_size: "36px"
        valign: "bottom"
        color: 0, 0, 0
        size_hint: 1, None
        height: "90dp"

        canvas.before:
            Color:
                rgb: hex("#0593e6")
            Rectangle:
                size: self.size
                pos: self.pos

    Label:
        text: "©2022 - WiShare v1 - Antares Mugisho"
        color: hex("#e1e1e1")
        size_hint: 1, None
        height: "30px"

        canvas.before:
            Color:
                rgb: hex("#0593e6")
            Rectangle:
                size: self.size
                pos: self.pos


# +------------------------------------------------------------+
# | Directory Chooser Popup                                    |
# +------------------------------------------------------------+

<DirectoryChooser>:
    title: "Select a directory"
    auto_dismiss: False
    size_hint: .9, .8

    BoxLayout:
        orientation: "vertical"
        spacing: "5dp"

        # Creating Icon view
        FileChooserIconView:
            on_selection: root.select(*args)

        # Creating Separator
        Label:
            size_hint: 1, None
            height: "1dp"
            pos_hint: {"center_x": .5}
            canvas.before:
                Color:
                    rgba: 1, 1, 1, .4
                Rectangle:
                    pos: self.pos
                    size: self.size

        # Creating Command buttons
        Button:
            text: "Done"
            background_color: hex("#0593e6")
            size_hint: None, None
            pos_hint: {"right" : .9}
            width: "100dp"
            height: "40dp"
            on_release: root.dismiss()