# This kv file uses the following encoding: utf-8

#:import hex kivy.utils.get_color_from_hex

MainWindow:

<MainWindow>:
    orientation:  "vertical"

    # +------------------------------------------------------------+
    # | Header                                                     |
    # +------------------------------------------------------------+
    Label:
        text: "WiShare"
        font_size: "24dp"
        bold: True
        size_hint: 1, .2
        canvas.before:
            Color:
                rgba: hex("#0593e6")
            Rectangle:
                size: self.size
                pos: self.pos

    Label:
        text: "Easily share your files from here, and get it all in your browser on an other device."
        text_size: self.width, None
        font_size: "16dp"
        color: 0, 0, 0
        padding: "20dp", "20dp"
        size_hint : 1, None
        height: self.texture_size[1]

        canvas.before:
            Color:
                rgba: hex("#80d0ff")
            Rectangle:
                size: self.size
                pos: self.pos

    # +------------------------------------------------------------+
    # | Main                                                       |
    # +------------------------------------------------------------+
    BoxLayout:
        orientation: "vertical"
        padding: "20dp"
        spacing: "30dp"

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: "horizontal"
            spacing: "10dp"
            size_hint: 1, None
            height: "60dp"

            TextInput:
                multiline: False

            Button:
                text: "Choose Directory"
                size_hint: .3, 1
                on_press: root.choose_directory()

        Button:
            id: start_btn
            text: "START SHARING"
            background_color: hex("#00ff00")
            size_hint: 1, None
            height: "60dp"
            disabled: False
            on_press: root.start_server()

        Label:
            text: root.addr
            text_size: self.width, None
            color: 0, 0, 0
            padding: "20dp", "20dp"
            size_hint: 1, None
            height: self.texture_size[1]

            canvas.before:
                Color:
                    rgba: hex("#80d0ff")
                Rectangle:
                    size: self.size
                    pos: self.pos

        Button:
            text: "STOP SHARING"
            background_color: hex("#ff0000")
            size_hint: 1, None
            height: "60dp"
            disabled: not start_btn.disabled
            on_press: root.stop_server()

    # +------------------------------------------------------------+
    # | Footer                                                     |
    # +------------------------------------------------------------+
    Label:
        text: "•CreativeMind"
        font_name: "fonts/CreativeMind.ttf"
        font_size: "36px"
        color: 0, 0, 0
        size_hint: 1, None
        height: "72px"

        canvas.before:
            Color:
                rgba: hex("#0593e6")
            Rectangle:
                size: self.size
                pos: self.pos

    Label:
        text: "©2022 - WiShare v1 - Antares Mugisho"
        color: hex("#e1e1e1")
        size_hint: 1, None
        height: "30px"

        canvas.before:
            Color:
                rgba: hex("#0593e6")
            Rectangle:
                size: self.size
                pos: self.pos

